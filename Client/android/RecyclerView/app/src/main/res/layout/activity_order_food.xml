<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderFood">
    <com.amar.library.ui.StickyScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:stickyHeader="@+id/LayoutFindFood"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/LayoutFindFood"
                android:background="#F8F8F8"
                >

                <TextView
                    android:id="@+id/txt_findFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:textSize="20dp"
                    android:gravity="center"
                    android:inputType="textPersonName"

                    android:text="@string/str_findFood" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/txt_findFood"
                    app:srcCompat="@android:drawable/ic_menu_search"

                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_close_circle"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>




            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RView_Discover"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                ></android.support.v7.widget.RecyclerView>


        </LinearLayout>


    </com.amar.library.ui.StickyScrollView>
</LinearLayout>